\xpretocmd{\orcidlogo}
    {\begin{lateximage}[orcidlogo]}
    {}
    {\LWR@patcherror{orcidlink}{orcidlogo pre}}

\xapptocmd{\orcidlogo}
    {\end{lateximage}}
    {}
    {\LWR@patcherror{orcidlink}{orcidlogo post}}

\VerifyCommand[lwarp][orcidlink]{\orcidlinkX}
