    \href%
        {https://orcid.org/#2}%
        {%
            \ifstrempty{#1}{}{#1\,}%
            \begin{lateximage}*[orcid #2]?%
            \orcidlogo%
            \end{lateximage}%   lwarp
            \ifstrempty{#3}{}{\,#3}%
        }%
}

