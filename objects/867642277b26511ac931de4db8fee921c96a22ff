\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{1.5pt}
\fancypagestyle{firstpage}{
    \fancyhf{} % Clear all headers and footers
    \renewcommand{\headrulewidth}{0pt}
    \fancyfoot[c]{\fontsize{15}{15}\selectfont\textcolor{accent}{\headrf {\textbf{\thepage}}}}
    \fancyhead[R]{}
    \fancyhead[L]{}
}

