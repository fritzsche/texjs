% \begin{macro}{\H@old@sbook}
% \begin{macro}{\@sbook}
% \Lpack{hyperref} patches \cs{@spart}, we do the same for \cs{@sbook}.
% \changes{v1.24}{2025/09/17}{Updated to be similar to the code used for \cs{@spart} in hyperref v7}
%    \begin{macrocode}
\let\H@old@sbook\@sbook
\def\@sbook#1{%
  \Hy@MakeCurrentHrefAuto{book*}%
  \Hy@raisedlink{%
    \hyper@anchorstart{\@currentHref}\hyper@anchorend
  }%
  \H@old@sbook{#1}
}

