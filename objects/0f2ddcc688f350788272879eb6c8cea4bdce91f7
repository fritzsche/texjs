% Added via a loop and some AI. Might be better to add it to \Lpack{hyperref} (have sendt request on GitHub).
% \changes{v1.24}{2025/09/17}{Changed to do this via a loop. Also found names for all the languages currently supported in \Lpack{hyperref}}
%    \begin{macrocode}
\ExplSyntaxOn
\cs_new_protected:Npn \_memoir_append_bookautorefname:nn #1#2
{
  \@ifundefined{HyLang@#1}{}{%
    \ExpandArgs{c}\g@addto@macro{HyLang@#1}{\def\bookautorefname{#2}}}
}
\clist_set:Nn \l_tmpa_clist {
  {afrikaans}{Boek},
  {english}{Book},
  {french}{Livre},
  {german}{Buch},
  {italian}{Libro},
  {magyar}{K\"onyv},
  {portuges}{Livro},
  {russian}{\CYRK\cyrn\cyri\cyrg\cyrr\cyra},
  {spanish}{Libro},
  {catalan}{Llibre},
  {vietnamese}{T\d{\^{a}}p s\'{a}ch},
  {greek}{\textBeta\textiota\textbeta\textlambda\'\textiota\textomicron},
  {dutch}{Boek},
  {norsk}{Bok},
  {danish}{Bog},
  {swedish}{Bok},
}
\clist_map_inline:Nn \l_tmpa_clist
{ \_memoir_append_bookautorefname:nn #1 }
\ExplSyntaxOff

