% \mathdef c {expansion}
\protected\def\mathdef#1#2{%
    \protected\def\mathdef:tmp{#2}%
    \mathcode`#1="8000\relax
    \letcharcode`#1=\mathdef:tmp}
% \mathlet c \csname
\let\mathlet = \mathdef

% sensible defaults
\matheqdirmode = 1 % short skips also in rtl
\mathdisplayskipmode = 1
