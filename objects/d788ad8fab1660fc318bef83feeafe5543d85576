  Dei. Considerat\\
  ergo, Dei, vel}
}
{
\schema
  {
    \schemabox{\textsc{Essentiam},}
  }
  {
    \schemabox{Unitate natur\ae{}.\\
    Trinitate personarum.\\
    Operibus ad intra.}
  }\smallskip
  \schema
  {
    \schemabox{\textsc{Voluntatem},\\
    manifestatam in\\
    operibus ad extra;\\
    ut in}
  }
  {
    \schemabox{Creatione.\\
    Sustentatione natur\ae{} %
    laps\ae{}.\\
    Reparatione.\\
    Conversione.\\
    Justificatione.\\
    Sanctificatione \&\\
    Glorificatione ejusdem.}
  }
