% \begin{macro}{\UCschema}
% \changes{0.6}{2013/03/10}{Added macro}
% \changes{1.0}{2020/03/13}{Ensure short macro}
% Permit \cmd{\schemabox} to add a \cmd{\strut} in the first line (default).
%
