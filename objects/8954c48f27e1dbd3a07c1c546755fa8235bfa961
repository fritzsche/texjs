          { \dim_zero:N \l_tmpa_dim }
          { \dim_set:Nn \l_tmpa_dim { \pgf@picmaxx - \pgf@picminx } }
        \dim_add:Nn \l_tmpa_dim \l_@@_xoffset_dim
%    \end{macrocode}
% |\l_@@_arrow_int = 0| probably means that we have an arrow in the |code-after|.
