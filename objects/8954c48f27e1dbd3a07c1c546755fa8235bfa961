            { pgf @ sh @ ns @ wa - \l_@@_prefix_str - \l_tmpa_int - v }
            { \@@_fatal:n { Inexistent~v-node } }
            { 
              \pgfpointanchor 
                { wa - \l_@@_prefix_str - \l_tmpa_int - v } 
                { center } 
