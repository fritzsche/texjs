      {  
        \legacy_if:nT { @inlabel }
          { \bool_set_true:N \l_@@_in_label_or_minipage_bool }
        \legacy_if:nT { @minipage }
          { \bool_set_true:N \l_@@_in_label_or_minipage_bool }
      }
%</LaTeX>
%    \end{macrocode}
